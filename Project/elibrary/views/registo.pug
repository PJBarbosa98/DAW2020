extends layout

block content
	.w3-container.w3-center.w3-teal
		h1 Página de Registo

	.w3-container.w3-center.w3-margin
		form(action="/", method="POST")
			p
				| Nome
				br
				input(name='nome', value='', type='text')
			p
				| Endereço de e-mail
				br
				input(name='email', value='', type='text')
			p
				| Filiação
				br
				input(name='filiacao', value='', type='text')
			p
				| Nível
				br
				label.radio-inline
					input(type='radio', name='nivel', value='administrador')
				span  Administrador
				br
				label.radio-inline
					input(type='radio', name='nivel', value='produtor')
				span  Produtor
				br
				label.radio-inline
					input(type='radio', name='nivel', value='consumidor')
				span  Consumidor
				br
			p
				| Palavra-Passe
				br
				input(name='password', value='', type='text')
			
			br
			input(value='Registrar', type='submit')
	br
	.w3-container.w3-center.w3-margin
		a(class='button' href='/') Voltar

