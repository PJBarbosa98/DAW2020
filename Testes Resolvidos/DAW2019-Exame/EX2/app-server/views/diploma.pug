extends layout

block content
	.w3-container
		.w3-panel.w3-blue.w3-center
			h1 Diploma #{diploma.numero}
	.w3-container
		table.w3-table-all.w3-centered
			thead
				tr
					th ID
					th Data
					th Número
					th Tipo
					th Sumário
					th Estado
					th Link Externo
			tbody
				tr.w3-hover-blue
					td= diploma.id
					td= diploma.data
					td= diploma.numero
					td= diploma.tipo
					td= diploma.sumario
					td= diploma.estado
					td= diploma.link
	.w3-container
		.w3-panel.w3-blue.w3-center
			h3 Processos Associados
		.w3-container
			table.w3-table-all.w3-centered
				thead
					tr
						th Código
						th Título
						th ID
				tbody
					each processo in processos
						tr.w3-hover-blue
							td= processo.codigo
							td= processo.titulo
							td= processo.id
	.w3-container.w3-center.w3-margin
		.w3-button.w3-blue.w3-margin
			a(href='/') Voltar
