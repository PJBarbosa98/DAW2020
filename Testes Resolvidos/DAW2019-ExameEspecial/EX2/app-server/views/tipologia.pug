extends layout

block content
	.w3-container
		.w3-panel.w3-blue.w3-center
			h1 Tipologia: #{tipologia.designacao}
	.w3-container
		table.w3-table-all.w3-centered
			thead
				tr
					th Designação
					th Sigla
					th Estado
			tbody
				tr.w3-hover-blue
					td= tipologia.designacao
					td= tipologia.sigla
					td= tipologia.estado
	.w3-container
		.w3-panel.w3-blue.w3-center
			h3 Entidades Pertencentes
		table.w3-table-all.w3-centered
			thead
				tr
					th Sigla
					th Designação
					th Identificador
			tbody
				each pert in pertencentes
					tr.w3-hover-blue
						td= pert.sigla
						td= pert.designacao
						td= pert.id
	.w3-container
		.w3-panel.w3-blue.w3-center
			h3 Entidades das quais é dona
		table.w3-table-all.w3-centered
			thead
				tr
					th Código
					th Título
					th Identificador
			tbody
				each dona in ent_dona
					tr.w3-hover-blue
						td= dona.codigo
						td= dona.titulo
						td= dona.id
	.w3-container.w3-center.w3-margin
		.w3-button.w3-blue.w3-margin
			a(href='/') Voltar