extends layout

block content
	.w3-container.w3-teal.w3-center
		h1 Página de Edição
		p Alteração dos dados do aluno #{student_info.numero}
	br
	.w3-container.w3-center
		form(action="/students", method="POST")
			input(type="hidden", name="_method", value="PUT")
			p
				| Número
				br
				input(name='numero', value=student_info.numero, type='text')
			p
				| Nome
				br
				input(name='nome', value=student_info.nome, type='text')
			p
				| Git
				br
				input(name='git', value=student_info.git, type='text')
			p
				| TPC (8 valores booleanos separados por vírgulas)
				br
				input(name='tpc', value=String(student_info.tpc), type='text')
			input(value='Atualizar', type='submit')
	br
	.w3-container.w3-center
		a(class='button' href='/students') Voltar
