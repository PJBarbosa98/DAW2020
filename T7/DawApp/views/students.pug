extends layout

block content
	.w3-card-4
		header.w3-container.w3-teal
			h3.w3-left Lista de Alunos (DAW2020)
		br
		br
		if list.length > 0
			.w3-container
				table.w3-table-all
					tr
						th NÃºmero
						th Nome
						th GIT
					each s in list
						tr
							td
								a(href='/students/' + s.numero) #{s.numero}
							td= s.nome
							td= s.git
							td
								a(href='/students/edit/' + s.numero) Editar
							td Apagar
		else
			.w3-container
				p Sem alunos...
		br
		.w3-container.w3-center
			.w3-button.w3-round.w3-teal
				a(class='button' href='students/register') Registar um novo aluno
		br
		footer.w3-container.w3-teal
			address Gerado por DawApp :: novembro, 2020 :: pjb
